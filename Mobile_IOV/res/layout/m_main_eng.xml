<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iovtech.mobile_iov.M_main" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:src="@drawable/logo_03" />

        <ImageButton
       		android:id="@+id/kor_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_weight="0.5"
            android:layout_marginLeft="25sp" />

        <ImageView
       		android:id="@+id/lang_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kor_btn"
            android:paddingLeft="3sp"
            android:onClick="mOnclick"
            android:layout_gravity="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Log-in"
            android:textSize="9sp"
            android:layout_gravity="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="三"
            android:layout_gravity="center" />
    </TableRow>
    

    <TableRow
        android:id="@+id/l_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow1"
        android:layout_below="@+id/tableRow1" >

        <ImageButton
            android:id="@+id/event_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingRight="5sp"
            android:paddingTop="20sp"
            android:src="@drawable/about_btn" />
    </TableRow>

    <ImageButton
        android:id="@+id/cloudera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tableRow2"
        android:layout_below="@+id/tableRow2"
        android:background="#FFFFFF"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:src="@drawable/cloudera_btn" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cloudera_btn"
        android:layout_alignRight="@+id/tableRow1"
        android:layout_alignTop="@+id/tableRow2"
        android:layout_toRightOf="@+id/tableRow2" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:paddingTop="20sp"
            android:text="News &amp; Event"
            android:textColor="#000051"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text=" □ "
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView2"
            android:text=" □ "
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView3"
            android:text=" □ "
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView4"
            android:text=" ■ "
            android:textColor="#000051"
            android:textSize="9sp" />

        <ImageButton
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:background="#FFFFFF"
            android:src="@drawable/event_1" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableRow1"
        android:src="@drawable/sep_line" />

    <ImageButton
        android:id="@+id/info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cloudera_btn"
        android:layout_below="@+id/cloudera_btn"
        android:src="@drawable/about_btn"
        android:background="#FFFFFF"
        android:paddingRight="5sp"
        android:paddingTop="5sp" />

    <ImageButton
        android:id="@+id/edu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_btn"
        android:layout_below="@+id/info_btn"
        android:src="@drawable/cloudera_btn"
        android:background="#FFFFFF"
        android:paddingRight="5sp"
        android:paddingTop="5sp" />

    <ImageButton
        android:id="@+id/consult_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignTop="@+id/info_btn"
        android:src="@drawable/cloudera_btn"
        android:background="#FFFFFF"
        android:paddingRight="5sp"
        android:paddingTop="5sp" />

    <ImageButton
        android:id="@+id/product_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edu_btn"
        android:layout_toRightOf="@+id/edu_btn"
        android:src="@drawable/about_btn"
        android:background="#FFFFFF"
        android:paddingRight="5sp"
        android:paddingTop="5sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/textView6"
        android:text="|     PC ver"
        android:textSize="9sp" />

    <ImageButton
        android:id="@+id/ref_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/consult_btn"
        android:layout_toRightOf="@+id/consult_btn"
        android:src="@drawable/about_btn"
        android:background="#FFFFFF"
        android:paddingTop="5sp"
        android:paddingRight="5sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="IOVTech Corporation  Seoul Gangnam Gangnamdaero Jerry's Planet 7F"
        android:textSize="7sp"
        android:paddingTop="3sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/imageView3"
        android:text="Site Map"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/edu_btn"
        android:src="@drawable/sep_line"
        android:paddingBottom="3sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:src="@drawable/logo_graph"
        android:paddingBottom="15sp" />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/textView7"
        android:text="     |     Privacy Policy"
        android:textSize="9sp" />

</RelativeLayout>